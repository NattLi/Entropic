{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020"
        ],
        "skipLibCheck": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "outDir": "./dist-electron",
        "strict": true
    },
    "include": [
        "electron/**/*"
    ]
}